# Environment Configuration
# Copy this file to .env and update the values

# Flask Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
FLASK_ENV=development
FLASK_DEBUG=True

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production

# Database Configuration
# For MySQL
DATABASE_URL=mysql+pymysql://username:password@localhost/user_auth_db

# For SQLite (development)
# DATABASE_URL=sqlite:///user_auth.db

# For PostgreSQL
# DATABASE_URL=postgresql://username:password@localhost/user_auth_db

# Email Configuration (for future features)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Security Configuration
BCRYPT_LOG_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION=30  # minutes

# reCAPTCHA Configuration (for production)
RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key

# Rate Limiting
RATE_LIMIT_STORAGE_URL=redis://localhost:6379

# Session Configuration
SESSION_PERMANENT=False
SESSION_TYPE=filesystem
